{% extends 'base.html.twig' %}

{%  block stylesheets %}
    @import url({{ asset('/assets/css/map-large.css') }});
{%  endblock %}

{% block body %}

    <div class="map">
{% for tile in map.mapTiles %}
        <div id="tile-{{ tile.tileId }}-outer" class="tile-outer tile-clear"
             style="left: {{ tile.coordinates|xpos }}px; top: {{ tile.coordinates|ypos }}px;">

            <div id="{{ tile.tileId }}-inner" class="tile-inner" onClick="alert('T{{ tile.tileId }} - {{ tile.coordinates }}')">
                <a name="{{ tile.tileId }}">T{{ tile.tileId }}</a><br />
                {{ tile.coordinates }}
            </div>
        </div>
{% endfor %}
    </div>

{% endblock %}
