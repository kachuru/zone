{% extends 'base.html.twig' %}

{%  block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/assets/css/map.css') }}" />
    <link rel="stylesheet" href="{{ asset('/assets/css/langton.css') }}" />
{%  endblock %}

{% block body %}

    <div class="map">
{% for tile in map.mapTiles %}
    <div id="tile-{{ tile.tileId }}-outer" class="tile-outer tile-grid"
         style="left: {{ tile.coordinates|xpos }}px; top: {{ tile.coordinates|ypos }}px;">

        <div id="tile-{{ tile.tileId }}-inner" class="tile-inner"
             onClick="alert('T{{ tile.tileId }} - {{ tile.coordinates }}')">

        </div>

    </div>
{% endfor %}
    </div>

{% endblock %}
